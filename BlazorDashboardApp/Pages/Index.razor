@page "/"

<PageTitle>Index</PageTitle>

<div class="container-fluid min-vh-100 d-flex flex-column">
    <div class="row">
        <div class="col border border-5">
            <h1 class="display-6">Blazor Dashboard App</h1>
        </div>
    </div>
    <div class="row flex-grow-1">
        <div class="col-3 border-end border-5">
            <h2>Library</h2>
            <Dropzone TItem="string" Items="Library" AllowsDrag='(d)=>true'>
                <Placeholder Title=@context></Placeholder>
            </Dropzone>
        </div>
        <div class="col-9">
            <h2>Dashboard</h2>
            <Dropzone TItem="string" Items="Dashboard" AllowsDrag='(d)=>true'>
                <Placeholder Title=@context></Placeholder>
            </Dropzone>
        </div>
    </div>
</div>

@code {
    List<string> Library = new() { "Hello", "World", "Test"};
    List<string> Dashboard = new() { "Sample" };
}